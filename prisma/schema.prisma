generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id          Int       @id @default(autoincrement())
  login       String    @unique
  password    String
  roles       Role[]    @relation("AccountRoles")
  areas       Area[]    @relation("AreaMembers")
  ownerOf     Area[]    @relation("AreaOwner")
  messages    Message[]
  sessions    Session[]
}

model Role {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  accounts Account[] @relation("AccountRoles")
}

model Area {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  members  Account[] @relation("AreaMembers")
  messages Message[]
  owner   Account   @relation("AreaOwner", fields: [ownerId], references: [id])
  ownerId Int
}

model Message {
  id     Int     @id @default(autoincrement())
  area   Area    @relation(references: [id], fields: [areaId])
  areaId Int
  from   Account @relation(references: [id], fields: [fromId])
  fromId Int
  text   String
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  ip        String
  data      Json
  account   Account  @relation(fields: [accountId], references: [id])
  accountId Int
}
